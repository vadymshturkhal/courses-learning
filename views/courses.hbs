<h1>Courses</h1>

{{#if allCourses.length}}
  {{#each allCourses}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-image ">
            <img src="{{ img_url }}" alt="{{ title }}">
          </div>
          <div class="card-content">
            <span class="card-title">{{ title }}</span>
            <p class="price">{{ price }}</p>
          </div>
          <div class="card-action buy-button">
            <a href="/courses/{{ course_id }}" target="_blank">Open Course</a>
            <a href="/courses/{{ course_id }}/edit?allow=true">Edit The Course</a>
            <form action="/cart/add" method="POST">
              <input type="hidden" name="course_id" value="{{ course_id }}">
              <button type="submit" class="btn btn-primary">Buy Course</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  {{/each}}

{{else}}
<p>Haven't any courses</p>
{{/if}}